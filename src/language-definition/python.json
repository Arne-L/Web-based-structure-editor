[
    {
        "name": "identifier",
        "match": "[a-zA-Z_][a-zA-Z0-9_]*"
    },
    {
        "name": "variable",
        "match": "[a-zA-Z_][a-zA-Z0-9_]*"
    },
    {
        "name": "standard_method",
        "format": "[identifier]([expression]*)",
        "implementations": [
            {
                "ref": "identifier",
                "name": "print",
                "arguments": [{"name":"text", "optional": false}],
                "editorName": "print(---)",
                "id": "add-print-btn",
                "toolbox": {
                    "category": "test",
                    "title": "print(message: any)",
                    "tooltip": {
                        "title": "Display Text in Console",
                        "body": "Displays the textual value of its input in the console."
                    },
                    "tips": [
                        {
                            "type": "executable",
                            "id": "ex-print-num-str",
                            "example": "print(123)\nprint(\"Hello World!\")"
                        },
                        {
                            "type": "executable",
                            "id": "ex-print-var",
                            "example": "a = \"abc\"\nprint(a)"
                        }
                    ],
                    "search-queries": [
                        "output",
                        "say",
                        "print",
                        "print output",
                        "console",
                        "write",
                        "see output"
                    ]
                }
            },
            {
                "identifier": "input",
                "arguments": [{"name":"text", "optional": false}]
            }
        ]
    },
    {
        "name": "function_call",
        "format": "[identifier]([expression]*)"
    },
    {
        "name": "function_definion",
        "format": "def [identifier]([variable]*):\n\t[statement]+"
    },
    {
        "name": "if_statement",
        "format": "if [expression]:\n\t[statement]+"
    }
]