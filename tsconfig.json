{
	"compilerOptions": {
		"experimentalDecorators": true,
		"sourceMap": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"target": "ES2022",
		"outDir": "./dist",
		"lib": ["dom", "ES6", "ES2023"],
		"types": [],
		"baseUrl": "./node_modules",
		"jsx": "preserve",
		"typeRoots": ["node_modules/@types"],
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
